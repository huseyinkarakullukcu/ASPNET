@model IEnumerable<Movie>

<h1>Film Listesi</h1>
<hr />
<div id="filmler">
    @foreach (var m in Model)
    {
        <div class="film">
            <img src="/img/@m.ImageUrl" width="200" />
            <h4>@m.Title</h4>
            <p>@m.Description</p>
            <p>@m.Director</p>
            <p>
                <ul>
                    @foreach (var player in m.Players)
                    {
                        <li>@player</li>
                    }


                </ul>
            </p>

        </div>
    }

</div>

@section menu{ 
    @await Html.PartialAsync("_menu")
}