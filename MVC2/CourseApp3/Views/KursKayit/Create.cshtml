@{
    ViewData["Title"] = "Kurs Kaydı Ekle";
}
@model KursKayit

<div class="card m-auto">
    <div class="card-header">
        <h5>Kurs Kaydı Ekle</h5>
    </div>
    <div class="card-body bg-white">
        <form asp-asp-controller="KursKayit" asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="OgrenciId" class="form-label">Öğrenciler</label>
                <select asp-for="OgrenciId" asp-items="@ViewBag.Ogrenciler" class="form-select">
                    <option value="">Seçiniz</option>
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="KursId" class="form-label">Kurslar</label>
                <select asp-for="KursId" asp-items="@ViewBag.Kurslar" class="form-select">
                    <option value="">Seçiniz</option>
                </select>
            </div>
            
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </form>
    </div>
</div>
