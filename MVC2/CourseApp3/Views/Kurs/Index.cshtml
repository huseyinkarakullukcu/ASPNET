@model IEnumerable<Kurs>
<h2>Kurs Listesi</h2>
<a href="/Kurs/Create" class="btn btn-primary">Kurs Ekle</a>
<hr>
<table class="table table-bordered">
    <thead>
        <tr>
            <th style="width: 100px;">Kurs Id</th>
            <th>Kurs Adı</th>
            <th style="width: 200px;">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
            <td>@item.KursId</td>
            <td>@item.KursBaslik</td>
            <td>
                <a href="/Kurs/edit/@item.KursId" class="btn btn-primary btn-sm">Güncelle</a>
                <a href="/Kurs/delete/@item.KursId" class="btn btn-danger btn-sm">Sil</a>
            </td>
        </tr>
        }
    </tbody>
</table>