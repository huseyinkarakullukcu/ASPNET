@model Movie

<div class="card my-3">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="@Model.Image" class="img-fluid rounded-start card-img" alt="...">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                <p class="card-text">@Model.Description</p>
                <p class="card-text">@Model.Director</p>
                @if(Model.Players != null)
                {
                    <ul>
                        @foreach (var item in Model.Players)
                        {
                            <li>@item</li>
                        }
                    </ul>
                }
            </div>
        </div>
    </div>
</div>

