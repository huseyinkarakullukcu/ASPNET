@model List<Genre>

<div class="list-group">
    <a href="/movie/list" class="list-group-item list-group-item-action fw-bold @(ViewBag.SelectedGenreId== null ? "active":"")" aria-current="true">
        Film Türleri
    </a>
    @foreach (var genre in Model)
    {
        <a href="/movie/list/@genre.GenreId" 
           class="list-group-item list-group-item-action @(ViewBag.SelectedGenreId== genre.GenreId.ToString() ? "active":"")">
            @genre.Name</a>
    }
</div>