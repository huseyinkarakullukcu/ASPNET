@model AdminMoviesModelView
<h1>Admin Movie List</h1>

<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th style="width:30px">#</th>
            <th style="width:150px">Image</th>
            <th>Title</th>
            <th>Genres</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Movies)
        {
            <tr>
                <td>@item.MovieId</td>
                <td>
                    <img src="@(item.Image != null? "/img/"+item.Image:"no-image.jpg")" class="img-fluid"  />
                </td>
                <td>@item.Title</td>
                <td>
                    <ul>
                        @foreach (var genre in item.Genres)
                        {
                            <li>@genre.Name</li>
                        }
                    </ul>
                </td>
                <td width="150">
                    <a href="/admin/MovieUpdate/@item.MovieId" class="btn btn-primary btn-sm">Update</a>
                    <form action="MovieDelete" method="post" style="display:inline">
                        <input type="hidden" name="movieId" value="@item.MovieId" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>